<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= restaurant.name %> - <%= restaurant.tagline %></title>
    <meta name="description" content="<%= restaurant.description %>">
    <meta name="keywords" content="<%= restaurant.keywords.join(', ') %>">
    <link rel="stylesheet" href="/styles/menu.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        .hero {
            background-image: url('<%= restaurant.heroImage || "/images/default-hero.jpg" %>');
        }
        :root {
            --primary-color: <%= restaurant.themeColors.primary || '#ff6b6b' %>;
            --secondary-color: <%= restaurant.themeColors.secondary || '#ffa502' %>;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar">
            <div class="logo">
                <h1><%= restaurant.name.toUpperCase() %></h1>
            </div>
            <div class="nav-links">
                <a href="/" class="<%= currentPage === 'home' ? 'active' : '' %>">Home</a>
                
                <% Object.keys(restaurant.menuCategories).forEach(category => { %>
                    <a href="#<%= category.toLowerCase().replace(/\s+/g, '-') %>"><%= category %></a>
                <% }); %>
                
                <a href="#cart" class="cart-link">
                    <i class="fas fa-shopping-cart"></i> 
                    <span class="cart-count">0</span>
                </a>
            </div>
            <div class="hamburger">
                <i class="fas fa-bars"></i>
            </div>
        </nav>
    </header>

    <main>
        <section id="home" class="hero">
            <div class="hero-content">
                <h1><%= restaurant.name.toUpperCase() %> MENU</h1>
                <p class="tagline"><%= restaurant.tagline %></p>
                <a href="#menu-start" class="cta-button">View Menu</a>
            </div>
        </section>

        <div id="menu-start"></div>

        <% Object.entries(restaurant.menuCategories).forEach(([categoryName, items]) => { %>
            <section id="<%= categoryName.toLowerCase().replace(/\s+/g, '-') %>" class="menu-section">
                <h2 class="section-title"><%= categoryName %></h2>
                <div class="meal-container">
                    <% items.forEach(item => { %>
                        <div class="meal-box">
                            <div class="meal-image" style="background-image: url('<%= item.image || '/images/default-food.jpg' %>')"></div>
                            <div class="meal-content">
                                <h3><%= item.name %></h3>
                                <% if(item.description) { %>
                                    <p><%= item.description %></p>
                                <% } %>
                                <p class="price">
                                    <%= item.price %> <%= item.currency || 'EGP' %>
                                    <% if(item.dietaryTags && item.dietaryTags.length) { %>
                                        <span class="dietary-tags">
                                            <% item.dietaryTags.forEach(tag => { %>
                                                <span class="tag <%= tag %>"><%= tag %></span>
                                            <% }); %>
                                        </span>
                                    <% } %>
                                </p>
                                <button class="add-to-cart" 
                                        data-id="<%= item.id %>"
                                        data-name="<%= item.name %>" 
                                        data-price="<%= item.price %>"
                                        data-restaurant="<%= restaurant.id %>">
                                    Add To Cart
                                </button>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </section>
        <% }); %>

        <section id="cart" class="cart-section">
            <div class="cart-container">
                <h2 class="section-title">Your Cart</h2>
                <div class="cart-items"></div>
                <div class="cart-summary">
                    <div class="cart-subtotal">
                        <p>Subtotal: <span class="subtotal-price">0 <%= restaurant.currency || 'EGP' %></span></p>
                    </div>
                    <% if(restaurant.taxRate > 0) { %>
                        <div class="cart-tax">
                            <p>Tax (<%= (restaurant.taxRate * 100).toFixed(0) %>%): 
                                <span class="tax-amount">0 <%= restaurant.currency || 'EGP' %></span>
                            </p>
                        </div>
                    <% } %>
                    <% if(restaurant.serviceCharge > 0) { %>
                        <div class="cart-service">
                            <p>Service Charge (<%= (restaurant.serviceCharge * 100).toFixed(0) %>%): 
                                <span class="service-amount">0 <%= restaurant.currency || 'EGP' %></span>
                            </p>
                        </div>
                    <% } %>
                    <div class="cart-total">
                        <p>Total: <span class="total-price">0 <%= restaurant.currency || 'EGP' %></span></p>
                    </div>
                    <button id="checkout" class="checkout-btn">Proceed to Checkout</button>
                    <button class="clear-cart-btn">Clear Cart</button>
                </div>
            </div>
        </section>
    </main>

    <footer>
        <div class="footer-content">
            <div class="footer-section about">
                <h3>About <%= restaurant.name %></h3>
                <p><%= restaurant.about %></p>
            </div>
            <div class="footer-section contact-info">
                <h3>Contact Us</h3>
                <p><i class="fas fa-phone"></i> <%= restaurant.contact.phone %></p>
                <p><i class="fas fa-envelope"></i> <%= restaurant.contact.email %></p>
                <p><i class="fas fa-map-marker-alt"></i> <%= restaurant.contact.address %></p>
            </div>
            <div class="footer-section hours">
                <h3>Opening Hours</h3>
                <% restaurant.openingHours.forEach(time => { %>
                    <p><%= time %></p>
                <% }); %>
            </div>
            <div class="footer-section social-media">
                <h3>Follow Us</h3>
                <div class="social-icons follow-us">
                    <% restaurant.socialMedia.forEach(social => { %>
                        <a href="<%= social.link %>" target="_blank"><i class="<%= social.icon %>"></i></a>
                    <% }); %>
                </div>
            </div>
        </div>
        <div class="copyright">
            <p>&copy; <%= new Date().getFullYear() %> <%= restaurant.name %>. All rights reserved.</p>
        </div>
    </footer>

    <script>
        const restaurantConfig = {
            id: "<%= restaurant.id %>",
            name: "<%= restaurant.name %>",
            currency: "<%= restaurant.currency || 'EGP' %>",
            taxRate: <%= restaurant.taxRate || 0 %>,
            serviceCharge: <%= restaurant.serviceCharge || 0 %>
        };
    </script>
    <script src="/scripts/menu.js"></script>
</body>
</html>