<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>QuickBit- Restaurants</title>
    <meta name="description" content="<%= restaurant.description %>">
    <meta name="keywords" content="<%= restaurant.keywords.join(', ') %>">
    <link rel="stylesheet" href="../public/css/Menu.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
</head>
<body>
   <%- include('partials/navigation') %>
    <main>
        <section id="home" class="hero">
            <div class="hero-content">
                <h1><%= restaurant.name.toUpperCase() %> MENU</h1>
                <p class="tagline"><%= restaurant.tagline %></p>
                <a href="#<%= Object.keys(restaurant.menuCategories)[0].toLowerCase() %>" class="cta-button">View Menu</a>
            </div>
        </section>
        <% Object.entries(restaurant.menuCategories).forEach(([category, items]) => { %>
        <section id="<%= category.toLowerCase() %>" class="menu-section">
            <h2 class="section-title"><%= category.toUpperCase() %></h2>
            <div class="meal-container">
                <% items.forEach(item => { %>
                <div class="meal-box">
                    <div class="meal-image" style="background-image: url('<%= item.image %>')"></div>
                    <div class="meal-content">
                        <h3><%= item.name %></h3>
                        <p><%= item.description %></p>
                        <p class="price"><%= item.price %> <%= item.currency || restaurant.currency || 'EGP' %></p>
                        <p class="meal-status" style="color: '<%= item.available === false ? 'red' : 'green' %>';">
                            <%= item.available === false ? 'Not Available' : 'Available' %>
                        </p>
                        <button class="add-to-cart"
                            data-name="<%= item.name %>"
                            data-price="<%= item.price %>"
                            <%= item.available === false ? 'disabled' : '' %>>
                            Add To Cart
                        </button>
                    </div>
                </div>
                <% }); %>
            </div>
        </section>
        <% }); %>
    </main>
    <%- include('partials/footer') %>
   
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const hamburger = document.getElementById('hamburger');
            const navLinks = document.getElementById('nav-links');
            hamburger.addEventListener('click', function() {
                navLinks.classList.toggle('active');
            });
        });
    </script>
</body>
</html>